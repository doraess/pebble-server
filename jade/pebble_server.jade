html
  head
    //link(type='text/css', rel='stylesheet', href='/site.css')
    link(href="//netdna.bootstrapcdn.com/bootswatch/3.0.0/spacelab/bootstrap.min.css", rel="stylesheet")
    link(href="css/pebble_server.css", rel="stylesheet")
    link(rel="SHORTCUT ICON", href="images/favicon.ico")
    title= 'Pebble Server'
    meta(charset='utf-8')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
  body
    nav(role="navigation").navbar.navbar-default
      .container
        .navbar-brand Pebble Server en Nostromo
        //h1 Pebble Server
    .container
      .row
        .col-md-5
          h4 Actualización a las #{data.time}
          //embed(src='images/1.svg', type='image/svg+xml').summary-icon
          .row
            .col-md-3
              span(data-icon='#{data.font}').summary-icon &nbsp;
            .col-md-9
              .row
                p Temperatura: #{data.temperature}° - Humedad: #{data.humidity}%
              .row
                .col-md-4
                  p
                    span(data-icon='F') &nbsp;
                    | #{data.wind} km/h 
                .col-md-6
                  p
                    span(data-icon='(') &nbsp;
                    | #{data.wind_dir}° 
              .row
                .col-md-4
                  p
                    span(data-icon='5') &nbsp;
                    | #{data.clouds}% 
                .col-md-6
                  p
                    span(data-icon='8') &nbsp;
                    | #{data.rain_prob}% - #{data.rain} cm/h
              .row
                p #{data.street}, #{data.number} - #{data.city}
              .row
                p Latitud: #{data.latitude}, Longitud: #{data.longitude}
        .col-md-7
          #map-canvas
  script(type='text/javascript',src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")  
  script(src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=geometry&sensor=false")
  script.
    lat = #{data.latitude}
    long = #{data.longitude}
  :coffee
    $(document).ready ->
      initialize = ->
        mapOptions =
          zoom: 16
          center: new google.maps.LatLng(lat, long)
          mapTypeId: google.maps.MapTypeId.ROADMAP
    
        map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions)
        image = "images/pebble.png"
        myLatLng = new google.maps.LatLng(lat, long)
        beachMarker = new google.maps.Marker(
          position: myLatLng
          map: map
          icon: image
        )
      map = undefined
      google.maps.event.addDomListener window, "load", initialize
          
  
          
          
          
          
          
          
          
          